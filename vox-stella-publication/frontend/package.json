{
  "name": "vox-stella",
  "private": true,
  "version": "1.1.0",
  "homepage": "./",
  "description": "Vox Stella - Traditional Horary Astrology Application",
  "main": "main.js",
  "scripts": {
    "dev": "vite dev --host 0.0.0.0 --port 5173",
    "start": "vite dev --host 0.0.0.0 --port 5173",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "clean": "rimraf dist node_modules/.vite",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder",
    "lint": "eslint ."
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.4.27",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5",
    "wait-on": "^7.0.1"
  },
  "author": {
    "name": "Vox Stella Team",
    "email": "support@voxstella.com",
    "url": "https://voxstella.com"
  },
  "license": "Commercial",
  "repository": {
    "type": "git",
    "url": "https://github.com/voxstella/vox-stella.git"
  },
  "bugs": {
    "url": "https://github.com/voxstella/vox-stella/issues"
  },
  "keywords": [
    "astrology",
    "horary",
    "traditional",
    "divination"
  ],
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.voxstella.app",
    "productName": "Vox Stella",
    "copyright": "Copyright Â© 2025 Vox Stella Team",
    "directories": {
      "buildResources": "build-resources",
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__/**/*",
          "!*.pyc",
          "!.env",
          "!horary_api.log",
          "!*.log*",
          "!build/**/*",
          "!*.spec",
          "!dist/**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/backend/**/*"
    ],
    "icon": "assets/icon.ico",
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "appx", "arch": ["x64"] }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Vox Stella Team",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vox Stella",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "appx": {
      "applicationId": "VoxStella",
      "backgroundColor": "#1e1e2e",
      "displayName": "Vox Stella",
      "identityName": "VoxStella",
      "publisher": "CN=Vox Stella Team",
      "publisherDisplayName": "Vox Stella Team",
      "languages": ["en-US"],
      "addAutoLaunchExtension": false,
      "showNameOnTiles": true,
      "setBuildNumber": true
    },
    "publish": {
      "provider": "generic",
      "url": ""
    },
    "compression": "normal",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "buildVersion": "1.1.0"
  }
}
